<Window x:Class="Scrabble.TilePoolViewForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TilePoolViewForm" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="269" VerticalAlignment="Top" Width="292">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF251E1E" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <ListView x:Name="ListBox" HorizontalAlignment="Left" Height="249" Margin="10,10,0,0" VerticalAlignment="Top" Width="272" Background="{x:Null}" Foreground="#FF00CCFF" SelectionMode="Single" FontSize="15" ScrollViewer.CanContentScroll="True" IsHitTestVisible="True">
                <ListView.View>
                    <GridView>
                        <GridView.ColumnHeaderContextMenu>
                            <ContextMenu/>
                        </GridView.ColumnHeaderContextMenu>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

    </Grid>
</Window>
